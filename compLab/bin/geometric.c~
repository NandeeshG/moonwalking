//input a,n,r and output sum of corresponding Geometric Series
// a + a*r + a*r*r + a*r*r*r ...

#include <stdio.h>
#include <math.h>
int main()
{
    int a, n, r;
    printf("Input a, n, r -> ");
    scanf("%d %d %d", &a, &n, &r);
    int sum = a * (pow(r, n) - 1) / (r - 1);
    printf("Geometric series sum = %d", sum);
    return 0;
}